<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".timetable">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <GridLayout
                android:id="@+id/grid_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="8"
                android:rowCount="14">


                    <TextView
                        android:layout_width="55dp"
                        android:layout_height="132dp"
                        android:layout_row="5"
                        android:layout_rowSpan="2"
                        android:layout_column="1"
                        android:background="#4A628EFF"
                        android:gravity="center"
                        android:text="D1145\n\n高等数学"
                        android:textSize="12dp" />


                    <TextView
                        android:layout_width="26dp"
                        android:layout_height="33dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:background="#dddddd"
                        android:text=""
                        android:textSize="30dp" />

                    <TextView
                        android:layout_width="55dp"
                        android:layout_height="33dp"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:background="#dddddd"
                        android:gravity="center"
                        android:text="一"
                        android:textSize="30dp" />

                    <TextView
                        android:layout_width="55dp"
                        android:layout_height="33dp"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:background="#dddddd"
                        android:gravity="center"
                        android:text="二"
                        android:textSize="30dp" />

                    <TextView
                        android:layout_width="55dp"
                        android:layout_height="33dp"
                        android:layout_row="0"
                        android:layout_column="3"
                        android:background="#dddddd"
                        android:gravity="center"
                        android:text="三"
                        android:textSize="30dp" />

                    <TextView
                        android:layout_width="55dp"
                        android:layout_height="33dp"
                        android:layout_row="0"
                        android:layout_column="4"
                        android:background="#dddddd"
                        android:gravity="center"
                        android:text="四"
                        android:textSize="30dp" />

                    <TextView
                        android:layout_width="55dp"
                        android:layout_height="33dp"
                        android:layout_row="0"
                        android:layout_column="5"
                        android:background="#dddddd"
                        android:gravity="center"
                        android:text="五"
                        android:textSize="30dp" />

                    <TextView
                        android:layout_width="55dp"
                        android:layout_height="33dp"
                        android:layout_row="0"
                        android:layout_column="6"
                        android:background="#dddddd"
                        android:gravity="center"
                        android:text="六"
                        android:textSize="30dp" />

                    <TextView
                        android:layout_width="55dp"
                        android:layout_height="33dp"
                        android:layout_row="0"
                        android:layout_column="7"
                        android:background="#dddddd"
                        android:gravity="center"
                        android:text="日"
                        android:textSize="30dp" />
                    <!--上面几行把周一和周日用textview显示-->
                    <TextView
                        android:layout_width="26dp"
                        android:layout_height="66dp"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:background="#dddddd"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="26dp"
                        android:layout_height="66dp"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:background="#dddddd"
                        android:gravity="center"
                        android:text="2"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="26dp"
                        android:layout_height="66dp"
                        android:layout_row="3"
                        android:layout_column="0"
                        android:background="#dddddd"
                        android:gravity="center"
                        android:text="3"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="26dp"
                        android:layout_height="66dp"
                        android:layout_row="4"
                        android:layout_column="0"
                        android:background="#dddddd"
                        android:gravity="center"
                        android:text="4"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="26dp"
                        android:layout_height="66dp"
                        android:layout_row="5"
                        android:layout_column="0"
                        android:background="#dddddd"
                        android:gravity="center"
                        android:text="5"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="26dp"
                        android:layout_height="66dp"
                        android:layout_row="6"
                        android:layout_column="0"
                        android:background="#dddddd"
                        android:gravity="center"
                        android:text="6"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="26dp"
                        android:layout_height="66dp"
                        android:layout_row="7"
                        android:layout_column="0"
                        android:background="#dddddd"
                        android:gravity="center"
                        android:text="7"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="26dp"
                        android:layout_height="66dp"
                        android:layout_row="8"
                        android:layout_column="0"
                        android:background="#dddddd"
                        android:gravity="center"
                        android:text="8"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="26dp"
                        android:layout_height="66dp"
                        android:layout_row="9"
                        android:layout_column="0"
                        android:background="#dddddd"
                        android:gravity="center"
                        android:text="9"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="26dp"
                        android:layout_height="66dp"
                        android:layout_row="10"
                        android:layout_column="0"
                        android:background="#dddddd"
                        android:gravity="center"
                        android:text="10"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="26dp"
                        android:layout_height="66dp"
                        android:layout_row="11"
                        android:layout_column="0"
                        android:background="#dddddd"
                        android:gravity="center"
                        android:text="11"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="26dp"
                        android:layout_height="66dp"
                        android:layout_row="12"
                        android:layout_column="0"
                        android:background="#dddddd"
                        android:gravity="center"
                        android:text="12"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="26dp"
                        android:layout_height="66dp"
                        android:layout_row="13"
                        android:layout_column="0"
                        android:background="#dddddd"
                        android:gravity="center"
                        android:text="13"
                        android:textSize="20dp" />


            </GridLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/prevWeek"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:backgroundTint="#FFFFFF"
                        app:icon="@drawable/left_arrow"
                        app:iconTint="@color/black"
                        app:iconSize="30dp"
                        app:iconGravity="textStart"
                        />

                    <TextView
                        android:id="@+id/showWeek"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="25dp"

                        />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/nextWeek"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:backgroundTint="#FFFFFF"
                        app:icon="@drawable/right_arrow"
                        app:iconTint="@color/black"
                        app:iconSize="30dp"
                        app:iconGravity="textEnd"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="课程详情"
                android:textSize="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="上课时段"
                        android:gravity="left"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="left"
                        android:id="@+id/lessonSection" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="left"
                        android:layout_weight="1"
                        android:text="上课教室" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:id="@+id/lessonClassroom" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_marginLeft="10dp"
                        android:text="任课教师"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:id="@+id/lessonTeacher"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="上课周次"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:id="@+id/lessonWeek"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:layout_marginLeft="10dp"
                        android:text="课程编号"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:id="@+id/lessonCode"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="上课时间"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:id="@+id/lessonTime"/>

            </LinearLayout>






    </LinearLayout>
</ScrollView>